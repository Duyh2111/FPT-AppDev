@model IEnumerable<FPT_AppDev.Models.Category>

@{
  ViewBag.Title = "Index";
}

<h2>Category</h2>

<p>
  @Html.ActionLink("Create a New Category", "Create")
</p>
<table class="table ">
  <thead class="thead-dark">
    <tr>
      <th width="20%">
        Category Name
      </th>
      <th width="60%">
        Description
      </th>
      <th>
        Actions
      </th>
    </tr>
  </thead>
  @foreach (var category in Model)
  {
    <tr>
      <td>
        @category.Name
      </td>
      <td class="">
        @category.Description
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = category.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = category.Id })
      </td>
    </tr>
  }

</table>
