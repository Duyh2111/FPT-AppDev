@model IEnumerable<FPT_AppDev.Models.Course>
@{
  ViewBag.Title = "Index";
}

<h2>Courses</h2>


@Html.ActionLink("Create a new Course", "Create")
<hr>

@using (Html.BeginForm("Index", "Courses", FormMethod.Get))
{
  <p>
    Find by name: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
  </p>
}
<hr />
<table class="table table-bordered" style="max-width: 80%; margin: 27px 0px 20px 120px;">
  <tr>
    <th width="10%">Course Name</th>
    <th width="55%">Description</th>
    <th width="10%">Category</th>
    <th width="10%">Topic</th>
    <th width="15%">Actions</th>
  </tr>
  @foreach (var course in Model)
  {
    <tr>
      <td>@course.Name</td>
      <td>@course.Description</td>
      <td>@course.Category.Name</td>
      <td>@course.Topic.Name</td>

      <td>
        @Html.ActionLink("Edit", "Edit", new { id = course.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = course.Id })

      </td>
    </tr>
  }
</table>