@model FPT_AppDev.Models.Topic

@{
  ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

<div class="form-horizontal">
  <h4>Topic</h4>
  @Html.ValidationSummary(false, "", new { @class = "text-danger" })
  @Html.HiddenFor(t => t.Id)

  <div class="form-group">
    @Html.LabelFor(t => t.Name)
    @Html.EditorFor(t => t.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(t => t.Name, "", new { @class = "text-danger" })

  </div>

  <div class="form-group">
    @Html.LabelFor(t => t.Description)
    @Html.EditorFor(t => t.Description, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(t => t.Description, "", new { @class = "text-danger" })

  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" value="Update" class="btn btn-default" />
    </div>
  </div>
</div>
}

<div>
  @Html.ActionLink("Go Back", "Index")
</div>
