@model FPT_AppDev.ViewModels.TopicCourseViewModel

@{
  ViewBag.Title = "Edit";
}

<h2>Edit Topic</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Edit", "Topics", FormMethod.Post))
{
  @Html.HiddenFor(c => c.Topic.Id)
  <div class="form-group">
    @Html.LabelFor(c => c.Topic.Name)
    @Html.EditorFor(c => c.Topic.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.Topic.Name, "", new { @class = "text-danger" })
  </div>
  <div class="form-group">
    @Html.LabelFor(c => c.Topic.Description)
    @Html.EditorFor(c => c.Topic.Description, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.Topic.Description, "", new { @class = "text-danger" })
  </div>
  <div class="form-group">
    @Html.LabelFor(c => c.Topic.Course.Name)
    @Html.DropDownListFor(c => c.Topic.CourseId,
     new SelectList(Model.Courses, "Id", "Name"),
     "Select Category Name",
     new { @class = "form-control" })
  </div>
 
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" value="Update" class="btn btn-default" />
    </div>
  </div>
}

<div>
  @Html.ActionLink("Go Back", "Index")
</div>