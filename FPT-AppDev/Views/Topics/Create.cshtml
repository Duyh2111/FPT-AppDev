@model FPT_AppDev.ViewModels.TopicCourseViewModel
@{
  ViewBag.Title = "Create";
}

<h2>Create a new Topic</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Create", "Topics", FormMethod.Post))
{
  <div class="form-group">
    @Html.LabelFor(c => c.Topic.Name)
    @Html.TextBoxFor(c => c.Topic.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Topic.Name, "", new { @class = "text-danger" })
  </div>
  <div class="form-group">
    @Html.LabelFor(c => c.Topic.Description)
    @Html.TextBoxFor(c => c.Topic.Description, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Topic.Description, "", new { @class = "text-danger" })
  </div>
  <div class="form-group">
    @Html.LabelFor(c => c.Topic.Course.Name)
    @Html.DropDownListFor(c => c.Topic.CourseId,
     new SelectList(Model.Courses, "Id", "Name"),
     "Select Course Name",
     new { @class = "form-control" })
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" value="Create" class="btn btn-default" />
    </div>
  </div>
}

<div>
  @Html.ActionLink("Go Back", "Index")
</div>