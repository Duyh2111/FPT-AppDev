﻿@model FPT_AppDev.Models.ApplicationUser
@{ 
  ViewBag.Title = "Edit"; 
  }

<h2>Edit</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm("Edit", "Staff", FormMethod.Post))
{
  @Html.HiddenFor(u => u.Id)
  <div>
    <hr>
    <div class="form-group">
      @Html.LabelFor(u => u.UserName)
      @Html.EditorFor(u => u.UserName, new { htmlAttributes = new { @class = "form-control" } })
      @Html.ValidationMessageFor(u => u.UserName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Update" class="btn btn-default" />
      </div>
    </div>
  </div>
  }

<div>
  @Html.ActionLink("Go Back", "Index", "Staff")
</div>