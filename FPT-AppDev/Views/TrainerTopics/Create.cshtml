@model FPT_AppDev.ViewModels.TrainerTopicViewModel

@{
  ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()
  if (Request.IsAuthenticated && User.IsInRole("Staff"))
  {
    <div class="form-horizontal">
      <h4>Assign Trainer</h4>
      <hr />
      @Html.ValidationSummary(false, "", new { @class = "text-danger" })
      <div class="form-group">
        @Html.LabelFor(t => t.TrainerTopic.TrainerId)
        @Html.DropDownListFor(t => t.TrainerTopic.TrainerId, new SelectList(Model.Trainers, "Id", "UserName"), new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.TrainerTopic.TrainerId, "", new { @class = "text-danger" })
      </div>

      <div class="form-group">
        @Html.LabelFor(t => t.TrainerTopic.TopicId)
        @Html.DropDownListFor(t => t.TrainerTopic.TopicId, new SelectList(Model.Topics, "Id", "Name"), new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.TrainerTopic.TopicId, "", new { @class = "text-danger" })
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <input type="submit" value="Assign" class="btn btn-default" />
        </div>
      </div>
    </div>
  }
}
<div>
  @Html.ActionLink("Go Back", "Index")
</div>