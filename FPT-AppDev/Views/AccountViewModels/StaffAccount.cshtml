@model FPT_AppDev.ViewModels.AccountViewModel
@{
  ViewBag.TiTle = "Index";
}
@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
  <h3>Staff</h3>
  <div>
    <table class="table">
      <tr>
        <th width="50%">Emails</th>
        <th>Roles</th>
        <th></th>
        <th></th>
      </tr>
      @foreach (var user in Model.Staff)
      {
        <tr>
          <td>@user.Email</td>
          <td>@user.RoleName</td>
        </tr>
      }
    </table>
  </div>
}

<h3>Trainer</h3>
<div>
  <table class="table">
    <tr>
      <th width="50%">Emails</th>
      <th>Roles</th>
      <th></th>
      <th></th>
    </tr>
    @foreach (var user in Model.Trainer)
    {
      <tr>
        <td>@user.Email</td>
        <td>@user.RoleName</td>
      </tr>
    }
  </table>
</div>
